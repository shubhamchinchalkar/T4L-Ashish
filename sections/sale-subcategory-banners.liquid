{% comment %} 
  Sale Subcategory Banners 
  - Shows up to 4 clickable banners (like "Up to 25% Off", "Super Deals", etc.) 
  - Only displays on the "On-Sale" collection page 
  - Fully responsive grid, safe styles 
{% endcomment %}
{{ 'section-sale-subcategory-banners.css' | asset_url | stylesheet_tag }}

{% if collection and collection.handle == 'on-sale' %}
  <section class="sale-banners section-{{ section.id }}-padding">
    <div class="page-width">
      <div class="sale-banners__grid">
        {% for block in section.blocks %}
          <a
            href="{{ block.settings.link | default: '#' }}"
            class="sale-banners__item"
            {{ block.shopify_attributes }}>
            <div class="sale-banners__media">
              {% if block.settings.image %}
                <img
                  src="{{ block.settings.image | img_url: '600x' }}"
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy">
              {% else %}
                <div class="sale-banners__placeholder">{{ block.settings.title | default: 'Banner' }}</div>
              {% endif %}
            </div>
            {% if block.settings.title %}
              <p class="sale-banners__title">{{ block.settings.title }}</p>
            {% endif %}
          </a>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
  {
    "name": "Sale Subcategory Banners",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Top padding",
        "default": 20
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Bottom padding",
        "default": 20
      }
    ],
    "blocks": [
      {
        "type": "banner",
        "name": "Banner",
        "limit": 4,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Banner image"
          }, {
            "type": "text",
            "id": "title",
            "label": "Heading"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Sale Subcategory Banners"
      }
    ]
  }
{% endschema %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | default: 20 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 20 }}px;
  }
{% endstyle %}