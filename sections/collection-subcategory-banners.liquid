{{ 'section-collection-subcategory-banners.css' | asset_url | stylesheet_tag }}

<div class="collection-subcat-banners section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="subcat-banners-grid">
      {% for block in section.blocks %}
        <div id="subcat-banner-{{ block.id }}" class="subcat-banner">
          <a href="{{ block.settings.link | default: '#' }}" aria-label="{{ block.settings.alt_text }}">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.alt_text | escape }}"
                loading="lazy" />
            {% endif %}
            {% if block.settings.badge_text != blank %}
              <span class="subcat-banner-badge">{{ block.settings.badge_text }}</span>
            {% endif %}
            {% if block.settings.title != blank %}
              <div class="subcat-banner-title">{{ block.settings.title }}</div>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Collection Subcategory Banners",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 24
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 24
      }
    ],
    "blocks": [
      {
        "type": "banner",
        "name": "Banner",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Banner image"
          },
          {
            "type": "text",
            "id": "alt_text",
            "label": "Alt text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title (optional)"
          }, {
            "type": "text",
            "id": "badge_text",
            "label": "Badge text (optional, e.g. SAVE UP TO 35%)"
          }
        ]
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "Collection Subcategory Banners"
      }
    ]
  }
{% endschema %}