{%- if cart != empty -%}
  {%- for item in cart.items -%}
    <div id="cart-notification-product-{{ item.key }}" class="cart-item">
      {%- if item.image -%}
        <div class="cart-notification-product__image global-media-settings">
          <img
            src="{{ item.image | image_url: width: 140 }}"
            alt="{{ item.image.alt | escape }}"
            width="70"
            height="{{ 70 | divided_by: item.image.aspect_ratio | ceil }}"
            loading="lazy"
          >
        </div>
      {%- endif -%}
      <div>
        {%- if settings.show_vendor -%}
          <p class="caption-with-letter-spacing light">{{ item.product.vendor }}</p>
        {%- endif -%}
        <h3 class="cart-notification-product__name h4">{{ item.product.title | escape }}</h3>
        <dl>
          {%- unless item.product.has_only_default_variant -%}
            {%- for option in item.options_with_values -%}
              <div class="product-option">
                <dt>{{ option.name }}:</dt>
                <dd>{{ option.value }}</dd>
              </div>
            {%- endfor -%}
          {%- endunless -%}
          {%- for property in item.properties -%}
            {%- assign property_first_char = property.first | slice: 0 -%}
            {%- if property.last != blank and property_first_char != '_' -%}
              <div class="product-option">
                <dt>{{ property.first }}:</dt>
                <dd>
                  {%- if property.last contains '/uploads/' -%}
                    <a href="{{ property.last }}" class="link" target="_blank">
                      {{ property.last | split: '/' | last }}
                    </a>
                  {%- else -%}
                    {{ property.last }}
                  {%- endif -%}
                </dd>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </dl>
        <dl>
          <div class="product-option">
            <div class="product-option exc_vat_price">
              {{ item.quantity }} x {{ item.original_price | money }}
            </div>
            <div class="product-option inc_vat_price">
              {{ item.quantity }} x {{ item.original_price | times:1.2 | money }}
            </div>
          </div>
        </dl>
        {%- if item.selling_plan_allocation != null -%}
          <p class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</p>
        {%- endif -%}
      </div>
      <div class="total_prices">
          <span class="price price--end exc_vat_price">
            {{ item.original_line_price | money }}
          </span>
          <span class="price price--end inc_vat_price">
            {{ item.original_line_price | times:1.2 | money }}
          </span>
          {% assign incWasPrice = item.variant.compare_at_price | default: item.original_price %}
          {% assign incVatPrice = item.price | times: 1.2 %}
          {% assign clean_incWasPrice = incWasPrice | times: 1.2 | money_without_currency | replace: ',', '' | plus: 0 %}
          {% assign clean_incVatPrice = incVatPrice | money_without_currency | replace: ',', '' | plus: 0 %}
          {% if clean_incWasPrice > clean_incVatPrice %}
          <div class="sale_badge">
              {% assign save_percentage = clean_incWasPrice | minus: clean_incVatPrice %}
              {% assign save_percentage = save_percentage | divided_by: clean_incWasPrice %}
              {% assign save_percentage = save_percentage | times: 100 %}
              you save {{ save_percentage | round: 0 }}%
          </div>
          {% endif %}
      </div>
    </div>
  {%- endfor -%}
{%- endif -%}
