<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('product-form');
    const quantityInput = document.getElementById('quantity');

    // Prevent form submission on button clicks
    form.addEventListener('click', function(e) {
      if (e.target.type === 'button') {
        e.preventDefault();
      }
    });

    // Handle increment button
    form.querySelector('button[onclick="incrementQuantity()"]').addEventListener('click', function(e) {
      e.preventDefault();
      const currentValue = parseInt(quantityInput.value) || 1;
      quantityInput.value = currentValue + 1;
    });

    // Handle decrement button
    form.querySelector('button[onclick="decrementQuantity()"]').addEventListener('click', function(e) {
      e.preventDefault();
      const currentValue = parseInt(quantityInput.value) || 1;
      if (currentValue > 1) {
        quantityInput.value = currentValue - 1;
      }
    });

    // Ensure quantity is always at least 1
    quantityInput.addEventListener('change', function() {
      const value = parseInt(this.value) || 1;
      this.value = Math.max(1, value);
    });
    
    // Dawn theme compatibility for gradient overlays
    function ensureDawnGradients() {
      // Target Dawn's overlay elements
      const dawnOverlays = document.querySelectorAll('.banner__overlay, .media-with-text__overlay, .image-with-text__overlay, .slideshow__slide--overlay');
      
      dawnOverlays.forEach(function(overlay) {
        // Apply gradient styling
        Object.assign(overlay.style, {
          background: 'linear-gradient(90deg, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.8) 50%, rgba(0,0,0,0.4) 100%)',
          opacity: '1',
          zIndex: '50',
          position: 'absolute',
          top: '0',
          right: '0',
          bottom: '0',
          left: '0',
          pointerEvents: 'none'
        });
      });
    }
    
    // Run immediately and after a short delay to catch dynamically loaded elements
    ensureDawnGradients();
    setTimeout(ensureDawnGradients, 500);
  });
</script>
  
              
