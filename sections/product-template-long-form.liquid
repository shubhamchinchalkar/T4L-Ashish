                  <path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"/>
                  <line x1="16" y1="8" x2="2" y2="22"/>
                  <line x1="17.5" y1="15" x2="9" y2="15"/>
                </svg>
              </div>
              <span style="color: rgba(255, 255, 255, 0.9); font-weight: 500;">15+ years of excellence</span>
            </div>

            <div style="display: flex; align-items: center; gap: 1rem;">
              <div style="width: 3.5rem; height: 3.5rem; border-radius: 9999px; background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(8px); display: flex; align-items: center; justify-content: center;">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
              <span style="color: rgba(255, 255, 255, 0.9); font-weight: 500;">4.6/5 from 1,689 reviews</span>
            </div>
          </div>
        </div>

        <!-- Product Image -->
        <div class="product-image" style="position: relative;">
          <div style="position: absolute; inset: -2rem; background: rgba(59, 130, 246, 0.2); border-radius: 9999px; filter: blur(24px);"></div>
          {% for image in product.images %}
            {% if forloop.first %}
              <img
                src="{{ image | img_url: 'large' }}"
                alt="{{ image.alt | escape }}"
                style="position: relative; width: 100%; max-width: 32rem; margin: 0 auto; filter: drop-shadow(0 25px 25px rgb(0 0 0 / 0.15));"
              />
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
                      

