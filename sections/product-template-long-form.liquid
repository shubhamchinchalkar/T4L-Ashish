<style>
  /* Original styles - preserved for rest of page */
  .hero-gradient, .hero__overlay.hero-gradient, div.hero-gradient,
  /* Dawn theme specific selectors */
  .banner__overlay, 
  .media-with-text__overlay,
  .image-with-text__overlay,
  .slideshow__slide--overlay {
    background: linear-gradient(90deg, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.8) 50%, rgba(0,0,0,0.4) 100%) !important;
    opacity: 1 !important;
    z-index: 20 !important; /* Increased z-index for Dawn theme */
    position: absolute !important;
    top: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    left: 0 !important;
    pointer-events: none !important; /* Ensures clicks pass through */
  }
  .noise-overlay {
    background-image: url('data:image/svg+xml;base64,');
  }
  .hero-heading {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
  }
  .btn-primary {
    background-color: rgb(37, 99, 235);
    transition: all 0.2s;
  }
  .btn-primary:hover {
    background-color: rgb(29, 78, 216);
    transform: scale(1.05);
  }
  .btn-secondary {
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    transition: all 0.2s;
  }
  .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }
  /* More specific selectors to avoid affecting header */
  .product-template .section,
  .section--gray,
  .section--white {
    padding: 8rem 0;
  }
  .section--gray {
    background-color: rgb(249, 250, 251);
  }
  .section--white {
    background-color: white;
  }
  .container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  .heading-lg {
    font-size: 2.5rem;
    font-weight: 700;
    color: rgb(17, 24, 39);
    margin-bottom: 1.5rem;
  }
  .heading-md {
    font-size: 2rem;
    font-weight: 700;
    color: rgb(17, 24, 39);
    margin-bottom: 1.5rem;
  }
  .heading-sm {
    font-size: 1.25rem;
    font-weight: 600;
    color: rgb(17, 24, 39);
    margin-bottom: 0.5rem;
  }
  .text-body-lg {
    font-size: 1.25rem;
    color: rgb(75, 85, 99);
    line-height: 1.75;
  }
  .text-body {
    color: rgb(75, 85, 99);
    line-height: 1.6;
  }
  .text-body-sm {
    font-size: 0.875rem;
    color: rgb(75, 85, 99);
  }
  .text-italic {
    font-style: italic;
  }
  .text-center {
    text-align: center;
  }
  .card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
  }
  .card--gray {
    background: rgb(249, 250, 251);
  }
  .card--feature {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }
  .feature-icon {
    width: 3rem;
    height: 3rem;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  .feature-icon--blue {
    background: rgb(239, 246, 255);
  }
  .product-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 4rem;
    align-items: center;
  }
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin: 4rem 0;
  }
  .gallery-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
  }
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin: 3rem 0;
  }
    .recovery-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 4rem;
  }
  .specs-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
  .setup-step {
    position: relative;
    padding-top: 3rem;
  }
  .setup-step__number {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 2.5rem;
    height: 2.5rem;
    background: rgb(37, 99, 235);
    color: white;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
  }
  .setup-step__icon {
    margin-top: 1.5rem;
  }
  .testimonial {
    border-left: 4px solid rgb(37, 99, 235);
    padding-left: 1.5rem;
    margin: 2rem 0;
  }
  .testimonial-author {
    color: rgb(75, 85, 99);
    font-weight: 500;
    margin-top: 0.75rem;
  }
  .trust-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }
  .trust-badge {
    text-align: center;
  }
  .trust-badge-title {
    font-weight: 600;
    margin: 1rem 0 0.5rem;
  }
  .trust-badge-text {
    color: rgb(75, 85, 99);
    font-size: 0.875rem;
  }

  /* Responsive improvements */
  @media (max-width: 768px) {
    .hero-heading {
      font-size: 2.5rem;
    }
    .hero-content {
      padding: 4rem 1.5rem !important;
    }
    .hero-grid {
      grid-template-columns: 1fr !important;
      gap: 2rem !important;
    }
    .hero-buttons {
      flex-direction: column !important;
    }
    .hero-stats {
      grid-template-columns: 1fr !important;
      gap: 1.5rem !important;
    }
    .product-image {
      max-width: 100% !important;
      margin-top: 2rem;
    }
    .product-grid,
    .gallery-grid,
    .feature-grid,
    .specs-grid,
    .trust-grid {
      grid-template-columns: 1fr;
    }
       .recovery-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .recovery-item {
      margin-bottom: 2rem;
    }
  }
    .product-template .section,
    .section--gray,
    .section--white {
      padding: 4rem 0;
    }
    .heading-lg {
      font-size: 2rem;
    }
    .heading-md {
      font-size: 1.75rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .hero-heading {
      font-size: 3rem;
    }
    .hero-content {
      padding: 6rem 2rem;
    }
    .hero-grid {
      gap: 4rem;
    }
    .hero-stats {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1025px) and (max-width: 1280px) {
    .hero-heading {
      font-size: 3.5rem;
    }
  }
</style>


<div class="product-template" style="font-family: system-ui, -apple-system, sans-serif;">
  <!-- Hero Section -->
  <div style="position: relative; min-height: 100vh;">
    <!-- Background Image -->
    <div style="position: absolute; inset: 0;">
      <img
        src="https://cdn.midjourney.com/7ace8435-7b64-467d-ba18-6498e0915134/0_0.png"
        alt="Snowy mountain landscape"
        style="width: 100%; height: 100%; object-fit: cover;"
      />
      <!-- Original gradient div (keeping for backward compatibility) -->
      <div class="hero-gradient" style="position: absolute; inset: 0;"></div>
      
      <!-- Enhanced overlay element with Dawn compatibility -->
      <div class="banner__overlay media-with-text__overlay image-with-text__overlay slideshow__slide--overlay" style="position: absolute; inset: 0; background: linear-gradient(90deg, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.8) 50%, rgba(0,0,0,0.4) 100%); opacity: 1; z-index: 50; pointer-events: none;"></div>
    </div>

    <div class="noise-overlay" style="position: absolute; inset: 0; opacity: 0.3; mix-blend-mode: overlay;"></div>

    <div class="hero-content" style="position: relative; max-width: 90rem; margin: 0 auto; padding: 8rem 2rem;">
