<div class="sale-banner-wrapper" style="display:flex;gap:20px;justify-content:center;flex-wrap:wrap;margin:30px 0;">
  <div
    class="sale-banner"
    data-min="0"
    data-max="25"
    style="cursor:pointer;">
    <img
      src="{{ 'banner-25off.jpg' | asset_url }}"
      alt="Up to 25% Off"
      style="width:300px;border-radius:8px;">
  </div>
  <div
    class="sale-banner"
    data-min="26"
    data-max="35"
    style="cursor:pointer;">
    <img
      src="{{ 'banner-35off.jpg' | asset_url }}"
      alt="Up to 35% Off"
      style="width:300px;border-radius:8px;">
  </div>
  <div
    class="sale-banner"
    data-min="36"
    data-max="50"
    style="cursor:pointer;">
    <img
      src="{{ 'banner-50off.jpg' | asset_url }}"
      alt="Up to 50% Off"
      style="width:300px;border-radius:8px;">
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.sale-banner').forEach(function(banner) {
    banner.addEventListener('click', function() {
      const min = this.getAttribute('data-min');
      const max = this.getAttribute('data-max');
      const url = new URL(window.location.href);
      url.searchParams.set('discount_min', min);
      url.searchParams.set('discount_max', max);
      window.location.href = url.toString();
    });
  });
  });
</script>